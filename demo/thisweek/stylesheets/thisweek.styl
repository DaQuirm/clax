@import '../bower_components/nib'
@import 'easing'

global-reset()

$calendar-width = 310px

html, body
	height: 100%

body
	display: flex
	flex-direction: column
	margin: 0
	font-family: Arial, sans-serif

	& > header
		display: flex
		align-items: center
		flex-basis: 100px
		justify-content: space-between
		font-family: 'Open Sans', Verdana, sans-serif
		font-size: 3rem

		$button-width = 36px
		$button-height = 36px

		.round-button
			position: relative
			width: $button-width
			height: $button-height
			// vertical-align: middle
			background: white
			border: 1px solid #666
			border-radius: 50%
			padding: 0
			outline: none
			cursor: pointer
			transition: all 0.3s

			&::before
				content: attr(data-value)

			&::after
				content: attr(data-label)
				display: block
				position: absolute
				width: 100%
				transform: translate(0, 75%)
				font-size: 0.9rem

			&:hover
				transform: scale(1.35)

				&::before
					color: #ccc
				// color: #ccc

				// &::before
				// 	transform: scale(1.35)
				// 	background: #222




		.month-name
			flex-basis: $calendar-width
			text-align: center
			color: #999

		nav
			cursor: default
			ul
				li
					display: inline-block
					width: $button-width
					padding: 0 8px
					text-align: center
					font-size: 1rem
					color: #222

					&::before
						content: ''
						position: absolute
						transform: translate(17px, $button-height)
						width: 2px
						height: 0
						opacity: 0
						background: #222
						transition: all 0.2s easeInOutQuad

					// &::after
					// 	display: block
					// 	content: attr(data-day)
					// 	transition: all 0.2s easeInOutQuad

					&:hover
						&::after
							transform: translate(0, 6px)

						// button
						// 	transform: scale(1.35)
						// 	background: #222
						// 	color: #ccc

					&.selected
						&::before
							height: 60px
							opacity: 1

						&::after
							transform: translate(0, 50px)
							color: #ccc

						button
							background: #b20000
							border: none
							color: rgba(0, 0, 0, 0)

		.create-note
			flex-basis: $calendar-width
			text-align: right
			margin-right: 12px
			font-size: 1rem

			button
				// round-button()
				font-size: 1.5rem
				margin-right: 22px

			&:hover
				&::after
					transform: translate(0, 6px)

				button
					transform: scale(1.35)
					background: #222
					color: #ccc

	.content
		flex-grow: 1
		background: #222

		.day-number
			width: $calendar-width
			text-align: center
			font-size: 9rem
			color: #444

		.note
			width: 220px
			height: 120px
			position: absolute
			top: 200px
			left: 200px
			font-size: 0.9rem
